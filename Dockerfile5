FROM registry.ott-consult.de/oc/base
LABEL MAINTAINER="joern.ott@ott-consult.de"

ENV KIBANA_VERSION=5.6.13 \
    APP_USER=kibana \
    APP_UID=2102 \
    APP_GROUP=elk \
    APP_GID=2100 \
    APP_HOME=/var/lib/kibana \
    CONF_DIR=/etc/kibana \
    GIT_COMMIT="x" \
    IMAGE_HISTORY="x"

COPY src /

RUN /tmp/install/oc-kibana.sh

EXPOSE 5601

ENTRYPOINT /entrypoint
